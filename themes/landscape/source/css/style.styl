@import "nib"
@import "_variables"
@import "_util/mixin"
@import "_util/grid"

global-reset()

input, button
  margin: 0
  padding: 0
  &::-moz-focus-inner
    border: 0
    padding: 0

@font-face
  font-family: FontAwesome
  font-style: normal
  font-weight: normal
  src: url(font-icon-path + ".eot?v=#" + font-icon-version)
  src: url(font-icon-path + ".eot?#iefix&v=#" + font-icon-version) format("embedded-opentype"),
       url(font-icon-path + ".woff?v=#" + font-icon-version) format("woff"),
       url(font-icon-path + ".ttf?v=#" + font-icon-version) format("truetype"),
       url(font-icon-path + ".svg#fontawesomeregular?v=#" + font-icon-version) format("svg")

html, body, #container
  height: 100%

body
  background: color-background
  font: font-size font-sans
  -webkit-text-size-adjust: 100%

.outer
  clearfix()
  max-width: (column-width + gutter-width) * columns + gutter-width
  margin: 0 auto
  padding: 0 gutter-width

  @media mq-mobile
    padding: 0 10px

.inner
  column(columns)

.left, .alignleft
  float: left

.right, .alignright
  float: right

.clear
  clear: both

#container
  position: relative

body.not-home
    #container
        padding-top: 62px;

#wrap
  transition: 0.2s ease-out
  position relative
  z-index: 1
  background: color-background
  .mobile-nav-on &
    transform:translateX(mobile-nav-width);
    -ms-transform:translateX(mobile-nav-width); /* IE 9 */
    -webkit-transform:translateX(mobile-nav-width); /* Opera, Chrome, and Safari */

#content
  background: color-background
  top: -5px
  min-height: banner-height+10
  position: relative
  z-index: 2
  margin-bottom: 140px

if sidebar and sidebar isnt bottom
  #main
    @media mq-normal
      column(main-column)

if sidebar is left
  #main
    float: right

@import "_extend"
@import "_partial/header"
@import "_partial/article"
@import "_partial/comment"
@import "_partial/archive"
@import "_partial/footer"
@import "_partial/highlight"
@import "_partial/mobile"

if sidebar
  @import "_partial/sidebar"

@page { margin: 2cm 1cm }

@media print {
  body {
    font-size: 14px;
  }

  .page-break {page-break-before: always;}

  #header-nav,
  #sidebar,
  #footer,
  .article-meta,
  .article-footer {
    display: none !important;
  }

  #container {
    padding: 0 !important;
  }

  #content {
    margin-bottom: 0 !important;
    top: 0 !important;
    min-height: 0 !important;
  }

  .outer,
  .article,
  #main {
    margin: 0 !important;
    padding: 0 !important;
    max-width: 100% !important;
  }

  .article-inner {
    box-shadow: none;
    border: none;
  }
}
